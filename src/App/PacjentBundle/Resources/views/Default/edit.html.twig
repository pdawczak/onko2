{% extends 'AppWebBundle::layout.html.twig' %}

{% block content %}
    <div class="row-flow">
        <div class="span12">
            <form class="form-horizontal" method="post" action="{{ path('app_pacjent_update', { pacjentId: pacjent.id }) }}">
                <fieldset>
                    <legend>{{ pacjent }} - edycja danych</legend>
                    <input type="hidden" name="_method" value="put">
                    {{ form_rest(form) }}

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> Zapisz</button>
                                <a href="{{ path('app_pacjent_index') }}" class="btn"><i class="icon-remove"></i> Anuluj</a>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
