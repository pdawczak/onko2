{% extends 'AppWebBundle::layout.html.twig' %}

{% block content %}
    <div class="row-flow">
        <div class="span12">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                    </tr>
                </thead>
                {% for pacjent in pacjenci %}
                    <tr>
                        <td>{{ pacjent.id }}</td>
                        <td>{{ pacjent.imie }}</td>
                        <td>{{ pacjent.nazwisko }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3"><p class="muted empty-table">Brak pacjentów</p></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
